<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/popup_menu_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/popup_menu_item_height"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:layout_marginLeft="@dimen/popup_menu_horizontal_gap"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/popup_menu_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/popup_menu_item_height"
        android:layout_marginLeft="@dimen/popup_menu_horizontal_gap"
        android:layout_toRightOf="@id/popup_menu_item_iv"
        android:gravity="center"
        android:textSize="@dimen/text_size_m" />
</RelativeLayout>
