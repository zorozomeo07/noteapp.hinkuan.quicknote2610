<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/tv_purchase_payment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/common_dp_20"
        android:text="@string/purchase_payment"
        android:textSize="@dimen/text_size_16" />

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/common_dp_300"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_purchase_payment"
        android:layout_centerInParent="true"
        android:layout_margin="@dimen/card_margin"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/card_corner_radius"
        app:cardElevation="@dimen/card_elevation"
        card_view:cardBackgroundColor="?android:colorBackground">

        <ImageView
            android:layout_width="@dimen/common_dp_300"
            android:layout_height="@dimen/common_dp_300"
            android:scaleType="fitCenter"
            android:src="@mipmap/purchase_wx" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </android.support.v7.widget.CardView>

</RelativeLayout>