<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_dialog_list_item_rl"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/fragment_dialog_list_item_iv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/popup_menu_item_height"
        android:layout_gravity="left|center_vertical"
        android:layout_marginLeft="@dimen/popup_menu_horizontal_gap"
        android:scaleType="fitCenter" />

    <TextView
        android:id="@+id/fragment_dialog_list_item_tv"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/popup_menu_item_height"
        android:layout_marginLeft="@dimen/popup_menu_horizontal_gap"
        android:gravity="center"
        android:textSize="@dimen/text_size_m" />
</LinearLayout>